<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtPrimeiraNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota da primeira avaliação"
        android:layout_margin="24dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtSegundaraNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota da segunda avaliação"
        android:layout_margin="24dp"
        android:inputType="number"/>
    <EditText
        android:id="@+id/edtTerceiraNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nota da terceira avaliação"
        android:layout_margin="24dp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edtFalta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número de faltas"
        android:layout_margin="24dp"
        android:inputType="number"/>


    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Calcular"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"/>


</LinearLayout>